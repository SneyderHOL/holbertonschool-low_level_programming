CC := gcc
SRC := main.c holberton.c
OBJ := $(patsubst %.c,%.o,$(SRC))
NAME := holberton
RM := rm -f

.PHONY = all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c
	$(CC) -c -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
